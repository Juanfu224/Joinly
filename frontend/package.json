{
  "name": "joinly",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production --base-href /",
    "build:stats": "ng build --configuration production --stats-json",
    "build:analyze": "npm run build:stats && source-map-explorer dist/joinly/browser/**/*.js",
    "watch": "ng build --watch --configuration development",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "optimize:icons": "node scripts/optimize-icons.js",
    "optimize:images": "node scripts/optimize-pngs.js",
    "convert:demo-images": "node scripts/convert-demo-images.js",
    "generate:images": "node scripts/generate-demo-images.js",
    "metrics:performance": "node scripts/measure-performance.js",
    "metrics:bundles": "node scripts/measure-bundles.js",
    "metrics:coverage": "node scripts/measure-coverage.js",
    "metrics:quality": "node scripts/measure-quality.js",
    "metrics:report": "node scripts/generate-metrics-report.js report",
    "metrics:all": "node scripts/generate-metrics-report.js",
    "ci:quick": "node scripts/ci-pipeline.js quick",
    "ci:full": "node scripts/ci-pipeline.js full"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.6.2",
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "Firefox ESR",
    "not dead",
    "not IE 11"
  ],
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.1",
    "@angular/cli": "^21.0.1",
    "@angular/compiler-cli": "^21.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "jsdom": "^27.1.0",
    "lighthouse": "^13.0.1",
    "sharp": "^0.34.5",
    "source-map-explorer": "^2.5.3",
    "svgo": "^4.0.0",
    "tinify": "^1.8.2",
    "typescript": "~5.9.2",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "^4.0.8"
  }
}
